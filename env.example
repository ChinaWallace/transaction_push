# 应用配置
APP_NAME=Python Trading Tool
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# 服务配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/trading_db
DATABASE_ECHO=false

# 币安API配置
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=false
BINANCE_BASE_URL=https://fapi.binance.com

# Redis配置（可选）
REDIS_URL=redis://localhost:6379/0

# 代理配置（可选）
PROXY_ENABLED=false
PROXY_URL=http://127.0.0.1:7890

# 通知推送配置
# 飞书机器人
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your_webhook_key

# 企业微信机器人
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key

# Telegram机器人
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=your_email@gmail.com

# 监控参数配置
# 持仓量变化阈值 (1.05表示5%增长触发提醒)
OPEN_INTEREST_THRESHOLD=1.05

# 成交量异常倍数
VOLUME_MULTIPLIER=3.0

# 费率监控间隔(分钟)
FUNDING_RATE_INTERVAL=240

# 趋势分析间隔(分钟)  
TREND_ANALYSIS_INTERVAL=15

# 持仓量监控间隔(分钟)
OPEN_INTEREST_INTERVAL=5

# 交易量监控间隔(分钟)
VOLUME_MONITOR_INTERVAL=60

# 数据保留天数
DATA_RETENTION_DAYS=30

# 任务调度配置
SCHEDULER_TIMEZONE=Asia/Shanghai

# 安全配置
SECRET_KEY=your_secret_key_for_jwt_and_encryption
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 限流配置
RATE_LIMIT_PER_MINUTE=60

# 日志配置
LOG_FORMAT=json
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_PATH=logs/
